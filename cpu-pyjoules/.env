# cpu-pyjoules/.env
COMPOSE_PROJECT_NAME=cpu-pyjoules

CLIENT_CPU_PYJOULES_IMAGE=aimilefth/cpu-pyjoules
CLIENT_CPU_SERVICE_LABEL=cpu-pyjoules

# Same-machine case (container hits the host-published port):
CLIENT_CPU_PROMETHEUS_HOST=host.docker.internal
CLIENT_CPU_PROMETHEUS_PORT=9090

CLIENT_CPU_SCRAPE_INTERVAL_S=0.1
CLIENT_CPU_PUSH_INTERVAL_S=4
CLIENT_CPU_MAX_RETRY_BATCHES=5
CLIENT_CPU_LOG_LEVEL=INFO
CLIENT_CPU_SERVICE_LABEL=cpu-pyjoules

# privileged toggle for this client stack
PRIVILEGED=False
